<% if flash[:success].present? %>
  <p><%= flash[:success] %></p>
<% end %>

<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
  <p><%= flash[:error_message] %></p>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @books, url: update_book_path(@books.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Books' %>

   <%= link_to "Show", book_path(@books.id) %> | <%= link_to "Back", books_path %>
<% end %>